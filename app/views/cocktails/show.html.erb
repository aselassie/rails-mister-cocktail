
  <div class="container-show">
    <div class="card-drink">
          <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill %>
        <div class="card-drink-info">
          <h3>Ingredients for <%= @cocktail.name.capitalize %></h3>
          <%= link_to 'Choose Ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-outline-dark" %>
       <% @cocktail.doses.each do |dose| %>
          <p> <i class="fas fa-flask"></i> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to dose_path(dose),
          method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash-alt destroy_dose"></i>
            <% end %>
          </p>
          <% end %>
          <%= link_to 'Back to Cocktails', cocktails_path, class: "btn btn-outline-dark" %>
        </div>

    </div>
  </div>


