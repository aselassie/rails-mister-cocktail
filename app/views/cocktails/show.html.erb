<div class="jumbotron">
  <div class="container">
    <h3>Ingredients for <%= @cocktail.name.capitalize %></h3>
    <%= cl_image_tag "lx1iwtlbryea1jdkffl7" %>
    <% @cocktail.doses.each do |dose| %>
      <p><%= dose.description %> => <%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="fa fa-trash-alt destroy_dose"></i>
        <% end %>
      </p>
    <% end %>
    <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), class: "btn btn-outline-dark" %>
    <%= link_to 'Back to Cocktails', cocktails_path, class: "btn btn-outline-dark" %>
  </div>
</div>

